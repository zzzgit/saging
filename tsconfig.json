{
	"compilerOptions": {
		"target": "ES2017",
		"module": "ES2015",
		"lib": [
			"esnext",
		],
		"sourceMap": true,
		"moduleResolution": "node",
		"strictNullChecks": true,
		"removeComments": true,
		"declaration": true,
		"outDir": "./built/lib/",
		"declarationDir": "./built/t/",
		"declarationMap": true,
		"preserveWatchOutput": true,
		"alwaysStrict": false,
		"diagnostics": false,
		"strict": false
	},
	"exclude": [
		"node_modules",
		"test/**"
	]
}
